{
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Tomxuetao/easy-layout.git"
  },
  "scripts": {
    "changeset": "changeset",
    "prepare": "husky",
    "commit": "git add . && git-cz",
    "version": "changeset version",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --dir packages/layout-example dev",
    "build": "pnpm --dir packages/layout-vue3 build",
    "build:example": "pnpm --dir packages/layout-example build",
    "lint": "eslint ./packages/**/src --ext .js,.ts,.tsx,.vue,.mjs,.cjs --fix"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.33.0",
    "git-cz": "^4.9.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "engines": {
    "pnpm": ">= 9.0.0"
  },
  "nano-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,scss}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
